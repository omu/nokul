<div class='alert alert-light'>
  <%= link_to_new(new_student_punishment_type_path, t('.new_student_punishment_type_link')) %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.code') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @student_punishment_types.each do |student_punishment_type| %>
              <tr>
                <td><%= student_punishment_type.name %></td>
                <td><%= student_punishment_type.code %></td>
                <td>
                  <%= link_to_edit(edit_student_punishment_type_path(student_punishment_type)) %>
                  <%= link_to_destroy(student_punishment_type) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
