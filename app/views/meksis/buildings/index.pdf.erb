<style>
  table, td, th {  
    border: 1px solid #ddd;
    text-align: left;
  }

  table {
    border-collapse: collapse;
    width: 100%;
    margin-top: 3em;
    margin-bottom: 3em;
  }

  th, td {
    padding: 15px;
  }

  thead { display: table-header-group }
  tfoot { display: table-row-group }
  tr { page-break-inside: avoid }

  #header {
    position: relative;
    width: 100%;
    height: 150px;
    margin-bottom: 40px;
  }

  #header h1 {
    position: absolute;
    max-width: 75%;
    text-align: center;
    margin: -15px auto;
    left: 0;
    right: 0;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }

  #header #logo {
    position: absolute;
    left: 0;
    height: 96px;
    width: 96px;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }

  #header #logo img {
    width: 96px;
    height: 96px;
  }
</style>
<script>
  function number_pages() {
    var vars={};
    var x=document.location.search.substring(1).split('&');
    for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = decodeURIComponent(z[1]);}
    var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
    for(var i in x) {
      var y = document.getElementsByClassName(x[i]);
      for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
    }
  }
</script>
<div id="header">
  <h1><br><%= t('.title') %><br/></h1>
  <div id="logo">
    <%= wicked_pdf_image_tag Tenant.configuration.branding.logo.file %>
  </div>
</div>
<h2><%= t('.stats') %></h2>
<table id="stats">
  <tr>
    <td><%= t('.indoor_area') %> (m<sup>2</sup>)</td>
    <td><%= @buildings.sum(:indoor_area) %></td>
  </tr>
  <tr>
    <td><%= t('.number_of_buildings') %></td>
    <td><%= @buildings.count %></td>
  </tr>
  <tr>
    <td><%= t('.number_of_active_buildings') %></td>
    <td><%= @buildings.actives.size %></td>
  </tr>
  <tr>
    <td><%= t('.number_of_classrooms') %></td>
    <td><%= @classrooms.count %></td>
  </tr>
  <tr>
    <td><%= t('.student_capacity') %></td>
    <td><%= @classrooms.sum(:student_capacity) %></td>
  </tr>
  <tr>
    <td><%= t('.exam_capacity') %></td>
    <td><%= @classrooms.sum(:exam_capacity) %></td>
  </tr>
</table>
<h2><%= t('.buildings_list') %></h2>
<table id="buildings">
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.code') %></th>
    <th><%= t('.place_type') %></th>
    <th><%= t('.unit') %></th>
    <th><%= t('.student_capacity') %></th>
    <th><%= t('.exam_capacity') %></th>
    <th><%= t('.indoor_area') %> (m<sup>2</sup>)</th>
  </tr>
  <% @buildings.each do |building| %>
    <tr>
      <td><%= building.name %></td>
      <td><%= building.code %></td>
      <td><%= building.place_type.name %></td>
      <td><%= building.unit.name %></td>
      <td><%= building.classrooms.sum(:student_capacity) %></td>
      <td><%= building.classrooms.sum(:exam_capacity) %></td>
      <td><%= building.indoor_area %></td>
    </tr>
  <% end %>
</table>
