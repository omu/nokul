<div data-controller="content-loader"
     data-content-loader-url="<%= url %>"
     <% if refresh.auto %>
      data-content-loader-refresh-interval="<%= refresh.interval %>"
     <% end %>>
  <div class="card">
    <div class="card-header custom-card-header">
      <div class="row">
        <div class="col-sm-9">
          <p class="text-center"><%= header %></p>
        </div>
        <div class="col-sm-3">
          <div class="d-flex justify-content-end">
            <div class="p-2">
              <button class="btn btn-outline-success btn-sm"
                      data-action="click->content-loader#refresh"
                      data-toggle="tooltip"
                      data-placement="bottom"
                      title="<%= t('refresh') %>">
                <%= fa_icon 'refresh' %>
              </button>
            </div>
            <% if refresh.auto %>
              <div class="p-2">
                <label class="c-switch c-switch-label c-switch-pill c-switch-primary">
                  <input type="checkbox"
                        data-action="change->content-loader#autoRefreshStart"
                        data-target="content-loader.autoRefresh"
                        class="c-switch-input">
                  <span class="c-switch-slider"
                        data-checked="&#x2713;"
                        data-unchecked="&#x2715;"
                        data-toggle="tooltip"
                        data-placement="bottom"
                        title="<%= t('toggle_auto_refresh') %>"></span>
                </label>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div data-target="content-loader.content"></div>
      <%= content %>
      <%= render 'layouts/components/loading' %>
    </div>
  </div>
</div>
