<!DOCTYPE html>
<html lang="tr">
  <head>
    <%= render 'layouts/shared/meta' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <header class="app-header navbar">
      <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag 'baum-logo.svg', height: '36', width: '134', alt: 'BAUM Logo', class: 'navbar-brand-full' %>
      <% end %>
      </a>
      <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button" data-toggle="sidebar-lg-show">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            <%= fa_icon 'user' %>
            <span class='d-md-down-none'> <%= current_user.email %></span>
          </a>
          <div class="dropdown-menu dropdown-menu-right">
            <div class="dropdown-header text-center">
              <strong class='<%= t(".my_account") %>'><%= t('.my_account') %></strong>
            </div>
            <%= link_to identities_path, class: 'dropdown-item' do %>
              <%= fa_icon('id-card', text: t('.identities')) %>
              <%= content_tag(:span, class: 'badge badge-warning') do %>
                <%= current_user.identities.count %>
              <% end %>
            <% end %>
            <%= link_to addresses_path, class: 'dropdown-item' do %>
              <%= fa_icon('home', text: t('.addresses')) %>
              <%= content_tag(:span, class: 'badge badge-warning') do %>
                <%= current_user.addresses.count %>
              <% end %>
            <% end %>
            <div class="dropdown-header text-center">
              <strong><%= t('.settings') %></strong>
            </div>
            <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
              <%= fa_icon('shield', text: t('.change_password')) %>
            <% end %>
            <%= link_to destroy_user_session_path, class: "dropdown-item", method: :delete do %>
              <%= fa_icon('lock', text: t('.logout')) %>
            <% end %>
          </div>
        </li>
      </ul>
      <button class="navbar-toggler aside-menu-toggler d-md-down-none" type="button" data-toggle="aside-menu-lg-show">
        <span class="navbar-toggler-icon"></span>
      </button>
      <button class="navbar-toggler aside-menu-toggler d-lg-none" type="button" data-toggle="aside-menu-show">
        <span class="navbar-toggler-icon"></span>
      </button>
    </header>
    <div class="app-body">
      <%= render 'layouts/shared/sidebar' %>
      <main class="main">
        <ol class='breadcrumb'>
          <% breadcrumb_trail do |crumb| %>
            <li class="breadcrumb-item <%= crumb.current? ? 'active' : '' %>">
              <%= link_to_unless crumb.current?, crumb.name, crumb.url, (crumb.current? ? {'aria-current' => 'page'} : {}) %>
            </li>
          <% end %>
        </ol>
        <div class="container-fluid">
          <div class="animated fadeIn">
            <%= yield %>
          </div>
        </div>
      </main>
      <%= render 'layouts/shared/aside' %>
    </div>
    <%= render 'layouts/shared/footer' %>
    <%= render 'layouts/shared/toastr' %>
  </body>
</html>
