<div class="alert alert-light">
  <%= link_to_new(new_address_path, t('.new_address')) %>
  <%= link_to (@addresses.formal.present? ? t('.update_from_mernis') :  t('.create_from_mernis') ), save_from_mernis_addresses_path, class: "btn btn-outline-primary btn-sm"  %>
</div>

<div class="row">
  <% @addresses.each do |address| %>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-header">
          <%= fa_icon 'id-card' %>
          <strong><%= t('.card_header') %></strong>
          <% if address.informal? %>
            <div class="card-header-actions">
              <%= link_to_edit(edit_address_path(address)) %>
              <%= link_to_destroy(address_path(address)) %>
            </div>
          <% end %>
        </div>
        <div class="card-body">
          <table class='table table-responsive-sm'>
            <tr>
              <td><%= t('.type') %></td>
              <td>
                <span class="badge badge-secondary">
                  <%= fa_icon('gavel', text: t('activerecord.enums.address.types.formal')) if address.formal? %>
                  <%= fa_icon('home', text: t('activerecord.enums.address.types.informal')) if address.informal? %>
                </span>
              </td>
            </tr>
            <tr>
              <td><%= t('.phone_number') %></td>
              <td><%= address.phone_number %></td>
            </tr>
            <tr>
              <td><%= t('.full_address') %></td>
              <td><%= address.full_address %></td>
            </tr>
            <tr>
              <td><%= t('.district_and_city') %></td>
              <td><%= address.district.name %> / <%= address.district.city.name %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
