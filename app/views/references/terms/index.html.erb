<div class='alert alert-light'>
  <%= link_to_new new_term_path, t('.new_term_link') %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'street-view', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <%= render 'layouts/shared/smart_search_form',
                   path: terms_path,
                   placeholder: t('.name') %>
        <table class='table table-responsive-sm table-striped table-hover'>
          <thead class="thead-dark">
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.identifier') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @terms.each do |term| %>
              <tr>
                <td><%= term.name %></td>
                <td><%= term.identifier %></td>
                <td>
                  <%= link_to_edit(edit_term_path(term)) %>
                  <%= link_to_destroy(term) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
