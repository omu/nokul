<div class='alert alert-light'>
  <%= link_to_new(new_student_grade_path, t('.new_student_grade_link')) %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.code') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @student_grades.each do |student_grade| %>
              <tr>
                <td><%= student_grade.name %></td>
                <td><%= student_grade.code %></td>
                <td>
                  <%= link_to_edit(edit_student_grade_path(student_grade)) %>
                  <%= link_to_destroy(student_grade) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_nav_bootstrap(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
