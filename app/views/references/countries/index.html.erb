<div class='alert alert-light'>
  <%= link_to_new new_country_path, t('.new_country_link') %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'street-view', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <%= render 'components/smart_search_form',
                   path: countries_path,
                   placeholder: t('.name') %>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.alpha_2_code') %></th>
              <th><%= t('.alpha_3_code') %></th>
              <th><%= t('.numeric_code') %></th>
              <th><%= t('.mernis_code') %></th>
              <th><%= t('.yoksis_code') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @countries.each do |country| %>
              <tr>
                <td><%= country.name %></td>
                <td><%= country.alpha_2_code %></td>
                <td><%= country.alpha_3_code %></td>
                <td><%= country.numeric_code %></td>
                <td><%= country.mernis_code %></td>
                <td><%= country.yoksis_code %></td>
                <td>
                  <%= link_to_show(country_path(country)) %>
                  <%= link_to_edit(edit_country_path(country)) %>
                  <%= link_to_destroy(country) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>