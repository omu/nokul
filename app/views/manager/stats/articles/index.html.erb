<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.academic_publications') %>
      </div>
      <div class='card-body'>
        <%= render 'search' %>
        <%= render 'articles', articles: @articles %>
      </div>
    </div>
    <nav aria-label='pagination'>
      <%== pagy_info(@pagy) %>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
