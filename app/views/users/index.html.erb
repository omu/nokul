<div class='alert alert-light'>
  <%= link_to_new(new_user_path, t('.new_user_link')) %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <%= render 'components/smart_search_form',
                   path: users_path,
                   placeholder: t('.smart_search_placeholder') %>
        <table class='table table-responsive-sm'>
          <thead>
            <tr>
              <th><%= t('.id_number') %></th>
              <th><%= t('.email') %></th>
              <th><%= t('.preferred_language') %></th>
              <th><%= t('.addresses') %></th>
              <th><%= t('.identities') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id_number %></td>
                <td><%= user.email %></td>
                <td><%= user.preferred_language %></td>
                <td><%= user.addresses.count %></td>
                <td><%= user.identities.count %></td>
                <td>
                  <%= link_to_show(user) %>
                  <%= link_to_edit(edit_user_path(user)) %>
                  <%= link_to_destroy(user) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>