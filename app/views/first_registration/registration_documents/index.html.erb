<div class='row'>
  <div class='col-sm-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
        <div class='card-header-actions'>
          <%= link_to_new t('.new_registration_document_link'), %i[new first_registration registration_document] %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'layouts/shared/smart_search_form',
                   path: %i[first_registration registration_documents],
                   placeholder: t('.placeholder') %>
        <table class='table table-responsive-sm table-striped table-hover'>
          <thead class="thead-dark">
            <tr>
              <th><%= t('.academic_term_id') %></th>
              <th><%= t('.unit_id') %></th>
              <th><%= t('.document_type_id') %></th>
              <th><%= t('.description') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @registration_documents.each do |registration_document| %>
              <tr>
                <td><%= full_name(registration_document.academic_term) %></td>
                <td><%= registration_document.unit.name %></td>
                <td><%= registration_document.document_type.name %></td>
                <td><%= registration_document.description %></td>
                <td><%= link_to_actions(registration_document, scope: :first_registration, except: :show) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
