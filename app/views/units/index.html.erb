<div class='alert alert-light'>
  <%= link_to_new(new_unit_path, t('.new_unit_link')) %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <%= render 'search' %>
        <table class='table table-responsive-sm table-sm'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.yoksis_id') %></th>
              <th><%= t('.foet_code') %></th>
              <th><%= t('.founded_at') %></th>
              <th><%= t('.duration') %></th>
              <th><%= t('.unit_type') %></th>
              <th><%= t('.district') %></th>
              <th><%= t('.unit_status') %></th>
              <th><%= t('.unit_instruction_language') %></th>
              <th><%= t('.unit_instruction_type') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @units.each do |unit| %>
              <tr>
                <td><%= unit.name %></td>
                <td><%= unit.yoksis_id %></td>
                <td><%= unit.foet_code %></td>
                <td><%= unit.founded_at %></td>
                <td><%= unit.duration %></td>
                <td><%= unit.unit_type.name %></td>
                <td><%= unit.district.name %> / <%= unit.district.city.name %></td>
                <td><%= unit.unit_status.try(:name) %></td>
                <td><%= unit.unit_instruction_language.try(:name) %></td>
                <td><%= unit.unit_instruction_type.try(:name) %></td>
                <td>
                  <%= link_to_show(unit_path(unit)) %>
                  <%= link_to_edit(edit_unit_path(unit)) %>
                  <%= link_to_destroy(unit) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_nav_bootstrap(@pagy) %>
      </ul>
    </nav>
  </div>
</div>