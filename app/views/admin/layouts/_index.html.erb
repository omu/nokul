<div class='row'>
  <div class='col-sm-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: card_header %>
        <div class='card-header-actions'>
          <%= link_to_new([:new, :admin, klass], t("admin.#{klass.pluralize}.index.new_#{klass}_link")) %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'components/smart_search_form',
           path: "#{klass.tableize}",
           placeholder: t("admin.#{klass.pluralize}.index.name") %>
        <table class='table table-responsive-sm table-striped'>
          <thead class='thead-dark'>
            <tr>
              <% params.each do |parameter| %>
                <%= content_tag :th do %>
                  <%= t("admin.#{klass.pluralize}.index.#{parameter}") %>
                <% end %>
              <% end %>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% collection.each do |item| %>
              <tr>
                <% params.each do |parameter| %>
                  <%= content_tag :td do %>
                    <%= item.send(parameter) %>
                  <% end %>
                <% end %>
                <td>
                  <%= link_to_edit([:edit, :admin, item]) %>
                  <%= link_to_destroy([:admin, item]) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(pagy) %>
      </ul>
    </nav>
  </div>
</div>
