<div class='row'>
  <div class='col-lg-12'>
    <div class="alert alert-light">
      <%= link_to_back curriculums_path %>
      <%= link_to_edit edit_curriculum_path(@curriculum) %>
    </div>

    <div class="card">
      <div class="card-header">
         <%= fa_icon 'book' %><strong><%= @curriculum.name %></strong>
      </div>
      <div class="card-body table-responsive">
        <table class='table table-bordered table-hover'>
          <tbody>
            <tr>
              <th><%= t('.name') %></th>
              <td><%= @curriculum.name %></td>
            </tr>
            <tr>
              <th><%= t('.unit') %></th>
              <td><%= @curriculum.unit.try(:name) %></td>
            </tr>
            <tr>
              <th><%= t('.semesters_count') %></th>
              <td><%= @curriculum.semesters_count %></td>
            </tr>
            <tr>
              <th><%= t('.status') %></th>
              <td><%= enum_t(@curriculum, :status) %></td>
            </tr>
            <tr>
              <th><%= t('.programs') %></th>
              <td>
                <ul class="list-group">
                  <% @curriculum.programs.each do |program| %>
                    <li class="list-group-item list-group-item-info"><%= program.name %></li>
                  <% end %>
                </ul>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <% @curriculum.semesters.each do |semester| %>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-header">
          <%= fa_icon 'book' %><strong><%= "#{semester.name} (#{semester.sequence})" %></strong>
        </div>
        <div class="card-body table-responsive">
          <table class='table table-bordered table-hover'>
            <thead>
              <tr>
                <th>Ders AdÄ±</th>
                <th>Ects</th>
                <th>Kredi</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= 'Lorem ips..' %></td>
                <td><%= 5 %></td>
                <td><%= 2 %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>