<div class='row'>
  <div class='col-sm-12'>
    <div class="alert alert-light">
      <%= link_to_back(:back) %>
    </div>

    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'book' %>
        <strong><%= form_title %></strong>
      </div>
      <div class='card-body'>
        <%= simple_form_for(curriculum) do |f| %>
          <%= f.error_notification %>
          <div class='row'>
            <div class='col-sm-6'>
              <%= f.input :name %>
            </div>
            <div class='col-sm-6'>
              <%= f.association :unit,
                                collection: Unit.active.curriculumable.order(:name),
                                label_method: :names_depth_cache %>
            </div>
            <div class='col-sm-6'>
              <%= f.association :programs,
                                collection: f.object.new_record? ? [] : f.object.unit.children.programs %>
            </div>
            <div class='col-sm-6'>
              <%= f.input :status,
                          collection: enum_options_for_select(f.object.class, :status) %>
            </div>
            <% if curriculum.new_record? %>
              <div class='col-sm-6'>
                <%= f.input :number_of_semesters,
                            collection: (1..Curriculum::MAX_NUMBER_OF_SEMESTERS),
                            selected: 8,
                            include_blank: false %>
              </div>
              <div class='col-sm-6'>
                <%= f.input :type,
                            collection: collection_options_for_select(%i[periodic yearly]),
                            selected: :periodic,
                            include_blank: false %>
              </div>
            <% else %>
              <div class="col-sm-12">
                <div class="alert alert-secondary">
                  <h3 class='text-center'><%= t('.semesters') %></h3>
                </div>
              </div>

              <%= f.simple_fields_for :semesters do |semester| %>
                <%= render 'semester_fields', f: semester %>
              <% end %>

              <div class='links col-sm-12'>
                <%= link_to_add_association f, :semesters, class: 'btn btn-primary btn-sm pull-right' %>
              </div>
            <% end %>

            <div class='form-group col-sm-12 mt-2'>
              <%= f.button :submit, class: 'btn btn-outline-success' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'select2' %>
<%= javascript_include_tag 'shared/cocoon' %>
