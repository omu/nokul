<div class="row">
  <% semesters.each do |semester| %>
    <div class="col-lg-<%=semesters.size > 1 ? 6 : 12 %> col-md-12">
      <div class="card border-success mb-3">
        <div class="card-header">
          <%= fa_icon 'book' %><strong><%= "#{semester.sequence}. #{t('semester')}" %></strong>
        </div>
        <div class="card-body table-responsive">
          <table class='table table-bordered table-hover'>
            <thead>
              <tr class="thead-dark">
                <th><%= t('.course.name') %></th>
                <th><%= t('.course.code') %></th>
                <th><%= t('.course.credit') %></th>
                <th><%= t('.course.ects') %></th>
                <th><%= t('actions') %></th>
              </tr>
            </thead>
            <tbody>
              <% semester.curriculum_courses.each do |curriculum_course| %>
                <tr>
                  <td><%= curriculum_course.name %></td>
                  <td><%= curriculum_course.code %></td>
                  <td><%= curriculum_course.credit %></td>
                  <td><%= curriculum_course.ects %></td>
                  <td>
                    <%= link_to_edit edit_curriculum_semester_curriculum_course_path(semester, curriculum_course) %>
                    <%= link_to_destroy [semester, curriculum_course] %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="text-right">
            <%= link_to_new new_curriculum_semester_curriculum_course_path(semester) %>
          </div>
        </div>

        <div class="card-footer text-muted">
          <p class="text-right">
            <strong><%= t('.total_credits') %>: </strong> <%= semester.courses.sum(:credit) %>
            <strong><%= t('.total_ects') %></strong> <%= semester.curriculum_courses.sum(:ects) %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>