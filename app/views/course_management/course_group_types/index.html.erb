<div class='alert alert-light'>
  <%= link_to_new new_course_group_type_path, t('.new_course_group_type_link') %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'tags', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <%= render 'layouts/shared/smart_search_form',
                   path: course_group_types_path,
                   placeholder: t('.name') %>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @course_group_types.each do |course_group_type| %>
              <tr>
                <td><%= course_group_type.name %></td>
                <td>
                  <%= link_to_edit(edit_course_group_type_path(course_group_type)) %>
                  <%= link_to_destroy(course_group_type) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
