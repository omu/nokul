<div class='nested-fields' style="display: <%= f.object.marked_for_destruction? ? 'none' : 'block' %>">
  <div class='card card-default'>
    <div class='card-body bg-light'>
      <%= link_to_remove_association f do %>
        <%= button_tag(fa_icon('times'), class: 'close') %>
      <% end %>
      <div class='row'>
        <div class='col-sm-6'>
          <%= f.association :lecturer, collection:    [*@available_course&.unit&.subtree_employees],
                                       label_method:  lambda { |c| full_name(c) },
                                       include_blank: false,
                                       input_html:    { id: 'group_lecturer_id', class: 'group_lecturer' } %>
        </div>
        <div class='col-sm-6'>
          <%= f.input :coordinator, collection: [[t('yes'), true], [t('no'), false]], required: true %>
        </div>
      </div>
    </div>
  </div>
</div>
