<script type='text/javascript'>
  $(document).ready(function() {
    $('#course_group_unit_id, #course_group_course_group_type_id').select2();
    $('#course_group_course_ids').select2({
      multiple: true
    });

    var parameters = [
      {
        el: '#course_group_unit_id',
        target: '#course_group_course_ids',
        params: { 'unit_id': '#course_group_unit_id' },
        source: '/units/:unit_id/courses/',
        label_attribute: 'name_with_code',
        reset_selectors: '#course_unit_group_course_ids'
      }
    ]
    var dynamic_select = new DynamicSelect(parameters)
    dynamic_select.init()
  });
</script>
