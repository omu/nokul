<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'street-view', text: t('.card_header') %>
        <div class='card-header-actions'>
          <%= link_to_new [:new, :calendar_management, 'calendar_event_type'], t('.new_event_type_link') %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'components/smart_search_form',
                   path: [:calendar_management, 'calendar_event_types'],
                   placeholder: t('.name') %>
        <table class='table table-responsive-sm table-striped table-hover'>
          <thead class="thead-dark">
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.category') %></th>
              <th><%= t('.identifier') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @calendar_event_types.each do |calendar_event_type| %>
              <tr>
                <td><%= calendar_event_type.name %></td>
                <td><%= enum_t(calendar_event_type, :category) %></td>
                <td><%= calendar_event_type.identifier %></td>
                <td>
                  <%= link_to_edit([:edit, :calendar_management, calendar_event_type]) %>
                  <%= link_to_destroy([:calendar_management, calendar_event_type]) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
