<style type="text/css">
  .card-header {
    background-image: url('<%= asset_url("public_profile/lecture-hall.jpg") %>');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .user_field {
    padding-top: 25px;
    line-height: 10pt;
  }
  .user_field > h1 {
    color: white;
    font-size: 20pt;
    font-weight: bold;
    text-shadow: 0 0 0.35714em rgba(0, 0, 0, 0.5);
  }
  .user_field > h2 {
    color: white;
    font-size: 13pt;
  }
  #resume h3 {
    color: #8c1515;
    font-size: 18px;
  }
  #resume hr {
    width: 1.3em;
    border-bottom: 0.15em solid #8c1515;
    margin: 0.5em 0;
  }

  .tab-pane ul {
    padding-left: 5px;
  }

  .tab-pane li {
    list-style: none;
  } 

  .tab-pane li::before {
    content: "— ";
  }

  .section {
    padding-top: 15px;
  }
</style>

<div class='col-sm-12'>
  <div class='card'>
    <div class="card-header">
      <div class="row">
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12" style="text-align: right;">
          <a href="https://placeholder.com"><img class="img-fluid" src="https://via.placeholder.com/150x150" /></a>
        </div>
        <div class="col-lg-8 col-md-7 col-sm-8 col-xs-12">
          <div class="user_field">
            <h1>
              <%= @identity.name %>
            </h1>
            <h2><%= @user.title %></h2>
            <p class="social">
              <a class="btn btn-brand btn-sm btn-twitter" target="_blank" href="https://www.twitter.com/<%= @user.twitter %>" type="button" style="margin-bottom: 4px">
                <i class="fa fa-twitter"></i>
              </a>
              <a class="btn btn-brand btn-sm btn-linkedin" target="_blank" href="https://www.linkedin.com/<%= @user.linkedin %>" type="button" style="margin-bottom: 4px">
                <i class="fa fa-linkedin"></i>
              </a>
              <a class="btn btn-brand btn-sm btn-html5" target="_blank" href="http://<%= @user.profile_preferences['website'] %>" rel="nofollow" type="button" style="margin-bottom: 4px">
                <i class="fa fa-globe"></i>
              </a>
              <a class="btn btn-brand btn-sm btn-twitter" target="_blank" href="https://www.skype.com/<%= @user.skype %>" type="button" style="margin-bottom: 4px">
                <i class="fa fa-skype"></i>
              </a>
            </p>
          </div>
        </div>
        <div class="col-md-2 col-sm-12 col-xs-12">
          <div class="card-header-actions">            
            <%= link_to(root_path, class: 'btn btn-sm btn-light') do %>
              <%= fa_icon('id-card', text: 'ORCID') %>
            <% end %>
            <%= link_to(profile_vcard_path(format: 'vcf'), class: 'btn btn-sm btn-light') do %>
              <%= fa_icon('id-card', text: 'vCard') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class='card-body'>
      <div class="col-sm-12">
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <a class="nav-link active show" data-toggle="tab" href="#resume" role="tab" aria-controls="home" aria-selected="true">
              <i class="fa fa-user"></i> Özgeçmiş &nbsp;
            </a>
          </li>
          <% unless (count = @user.articles.count).zero? %>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#articles" role="tab" aria-controls="profile" aria-selected="false">
              <i class="fa fa-research"></i> Makaleler &nbsp;
              <span class="badge badge-pill badge-warning"><%= count %></span>
            </a>
          </li>
          <% end %>

          <% unless (count = @user.projects.count).zero? %>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#projects" role="tab" aria-controls="messages" aria-selected="false">
              <i class="fa fa-book"></i> Projeler
              <span class="badge badge-pill badge-success"><%= count %></span>
            </a>
          </li>
          <% end %>

          <% unless (count = @user.certifications.count).zero? %>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#certs" role="tab" aria-controls="messages" aria-selected="false">
              <i class="fa fa-book"></i> Sertifikalar
              <span class="badge badge-pill badge-info"><%= count %></span>
            </a>
          </li>
          <% end %>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active show" id="resume" role="tabpanel">
            <div class='row'>
              <div class="col-sm-8">
                <div class="section">
                  <h3>Uzmanlık Alanları</h3>
                  <hr>
                  &mdash;
                </div>

                <div class="section">
                  <h3>Akademik Görevler</h3>
                  <hr>
                  <ul>
                    <% @user.duties.each do |duty| %>
                      <li>
                        <%= duty.unit.name %> 
                        (<%= duty.start_date.strftime('%Y') %> - <%= duty.end_date ? duty.end_date.strftime('%Y') : ' Halen ' %>)
                      </li>
                    <% end %>
                  </ul>
                </div>

                <div class="section">
                  <h3>İdari Görevler</h3>
                  <hr>
                    <ul>
                      <% @employee.positions.each do |position| %>
                        <li>
                          <%= position.duty.unit.name %> - 
                          <%= position.administrative_function.name %>
                        </li>
                      <% end %>
                    </ul>
                </div>

                <div class="section">
                  <h3>Ödüller</h3>
                  <hr>
                  &mdash;
                </div>

                <div class="section">
                  <h3>Eğitim Bilgileri</h3>
                  <hr>
                  &mdash;
                </div>
              </div>
              <div class="col-sm-4">
                <table class='table table-responsive-sm'>
                  <tr>
                    <td>Doğum Yeri</td>
                    <td><%= @identity.place_of_birth %></td>
                  </tr>
                  <tr>
                    <td>Yabancı Diller</td>
                    <td>&mdash;</td>
                  </tr>
                  <tr>
                    <td>E-posta</td>
                    <td><%= @user.email %></td>
                  </tr>
                  <tr>
                    <td>Website</td>
                    <td><%= @user.profile_preferences['website'] || '&mdash;'.html_safe %></td>
                  </tr>
                  <tr>
                    <td>Dahili</td>
                    <td><%= @user.profile_preferences['extension_number'] || '&mdash;'.html_safe %></td>
                  </tr>
                  <tr>
                    <td>Uzmanlık Alanları</td>
                    <td>&mdash;</td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="articles" role="tabpanel">
            <% @user.articles.each do |article| %>
              <li><%= article.title %> - (<%= article.journal %>)</li>
            <% end %>
          </div>
          <div class="tab-pane" id="projects" role="tabpanel">
            <ul>
              <% @user.projects.each do |project| %>
                <li><%= project.name %></li>
              <% end %>
            </ul>
          </div>
          <div class="tab-pane" id="certs" role="tablist">
            <div id="certAccordion" data-children=".item">
              <% @user.certifications.each do |cert| %>
              <div class="item">
                <a data-toggle="collapse" data-parent="#certAccordion" href="#cert<%= cert.id %>" aria-expanded="false" aria-controls="certAccordion" > &mdash; <%= cert.name %></a>
                <div class="collapse" id="cert<%= cert.id %>" role="tab" style="">
                  <p class="mb-3"><%= cert.content %></p>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
