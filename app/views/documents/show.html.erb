<div class='row'>
  <div class='col-lg-12'>
    <div class="card">
      <div class="card-header">
        <%= fa_icon 'university' %><strong><%= @document.name %></strong>
        <div class="card-header-actions">
          <%= link_to_edit(edit_document_path(@document)) %>
          <%= link_to_destroy(@document) %>
        </div>
      </div>

      <div class="card-body">
        <table class="table table-responsive-sm">
          <tbody>
            <tr>
              <td><%= t('.name') %></td>
              <td><%= @document.name %></td>
            </tr>
            <tr>
              <td><%= t('.statement') %></td>
              <td><%= @document.statement %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
