<div id="SearchForms" role="tablist">

  <%= render 'layouts/shared/smart_search',
             search_path: committee_agendas_path,
             placeholder: t('.smart_search_placeholder') %>

  <div class="card">
    <div class="card-header" role="tab" id="detailedSearch">
      <h5 class="mb-0">
        <a class="collapsed"
           data-toggle="collapse"
           href="#collapseDetailedSearch"
           id="collapseDetailedSearchLink"
           aria-expanded="false"
           aria-controls="DetailedSearch">
          <%= t('detailed_search') %>
        </a>
        <div class="float-right">
          <%= link_to t('reset'), committee_agendas_path, class: 'btn btn-warning btn-sm' %>
        </div>
      </h5>
    </div>
    <div id="collapseDetailedSearch"
         class="collapse"
         role="tabpanel"
         aria-labelledby="detailedSearch"
         data-parent="#SearchForms">
      <div class="card-body">
        <%= form_tag committee_agendas_path, method: :get do %>
          <div class="row">
            <div class="col-sm-3">
              <div class="form-group">
                <%= label_tag(:status, t('.status')) %>
                <%= select_tag(:status,
                              options_for_select(enum_options_for_select(Agenda, :status), params[:status]),
                              include_blank: true,
                              class: 'form-control',
                              style: 'width: 100%') %>
              </div>
            </div>
            <div class="col-sm-3">
              <div class="form-group">
                <%= label_tag(:agenda_type_id, t('.agenda_type_id')) %>
                <%= select_tag(:agenda_type_id,
                              options_from_collection_for_select(AgendaType.all, :id, :name, params[:agenda_type_id]),
                              include_blank: true,
                              class: 'form-control',
                              style: 'width: 100%') %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <%= submit_tag t('search'), class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type='text/javascript'>
  $(document).ready(function() {
    $('#agenda_type_id').select2();
  });
</script>