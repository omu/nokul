<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'tags', text: t('.card_header') %>
        <div class='card-header-actions'>
          <%= link_to_new t('.new_agenda_type_link'), new_agenda_type_path %>
        </div>
      </div>
      <div class='card-body'>
        <%= render 'layouts/shared/smart_search_form',
                   path:        agenda_types_path,
                   placeholder: t('.name') %>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @agenda_types.each do |agenda_type| %>
              <tr>
                <td><%= agenda_type.name %></td>
                <td>
                  <%= link_to_actions(agenda_type, except: :show) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
