<script type='text/javascript'>
  $(document).ready(function() {
    $('#tuition_unit_ids').select2({
      closeOnSelect: false,
      ajax: {
        url: "/tuitions/units.json",
        dataType: "json",
        delay: 250,
        data: function (params) {
            return {
              q: params.term
            };
          },
        processResults: function (data) {
          return { results: data };
        },
        cache: true
      }
    });
  });
</script>
