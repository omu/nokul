<div class='alert alert-light'>
  <%= link_to_back calendar_types_path %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header', calendar_type: @calendar_type.name) %>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-striped'>
          <tbody>
            <tr>
              <th><%= t('.unit_types') %></th>
              <td><%= @calendar_type.unit_types.map(&:name).join(', ')%></td>
            </tr>
          </tbody>
        </table>
        <hr>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.calendar_titles') %></th>
            </tr>
          </thead>
          <tbody>
            <% @titles.each do |title| %>
              <tr>
                <td><%= title.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
