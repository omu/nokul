<div class='alert alert-light'>
  <%= link_to_new(new_academic_term_path, t('.new_academic_term_link')) do %>
    <%= fa_icon 'plus' %>
  <% end %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.year') %></th>
              <th><%= t('.term') %></th>
              <th colspan='2'><%= t('.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @academic_terms.each do |academic_term| %>
              <tr>
                <td><%= academic_term.year %></td>
                <td><%= enum_t(academic_term, :term) %></td>
                <td><%= link_to_edit(edit_academic_term_path(academic_term)) %></td>
                <td><%= link_to_destroy(academic_term) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='Page navigation example'>
      <ul class='pagination justify-content-center'>
        <%== pagy_nav_bootstrap(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
