<div class="card">
  <br><h4 class="card-heading text-center">Akademik Dönemler</h4>

  <table class="table">
    <thead>
      <tr>
        <th>Yıl</th>
        <th>Dönem</th>
        <th>İşlemler</th>
      </tr>
    </thead>

    <tbody>
      <% @academic_terms.each do |academic_term| %>
        <tr>
          <td><%= academic_term.year %></td>
          <td><%= academic_term.term %></td>
          <td>
            <%= link_to 'Düzenle', edit_academic_term_path(academic_term), class: "btn btn-secondary btn-sm" %>
            <%= link_to 'Sil', academic_term, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <div class="card-footer">
    <%= link_to 'Yeni Akademik Dönem', new_academic_term_path, class: "btn btn-success" %>
  </div>
</div>
