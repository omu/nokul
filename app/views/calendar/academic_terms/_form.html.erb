<%= simple_form_for @academic_term do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :year, collection: AcademicTerm.years, label: 'Akademik Yıl' %>
    <%= f.input :term, collection: AcademicTerm.terms.keys, label: 'Akademik Dönem' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
