<div class='alert alert-light'>
  <%= link_to_new(new_calendar_title_path, t('.new_calender_title_link')) %>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'align-justify', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <%= form_tag calendar_titles_path, method: :get do %>
          <div class="form-group">
            <%= text_field_tag 'term', params[:term], placeholder: t('.name'), class: 'form-control' %>
          </div>
          <%= submit_tag t('search'), class: 'btn btn-primary' %>
        <% end %>
        <hr \>
        <table class='table table-responsive-sm table-striped'>
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @calendar_titles.each do |calendar_title| %>
              <tr>
                <td><%= calendar_title.name %></td>
                <td>
                  <%= link_to_edit(edit_calendar_title_path(calendar_title)) %>
                  <%= link_to_destroy(calendar_title) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='Page navigation example'>
      <ul class='pagination justify-content-center'>
        <%== pagy_nav_bootstrap(@pagy) %>
      </ul>
    </nav>
  </div>
</div>