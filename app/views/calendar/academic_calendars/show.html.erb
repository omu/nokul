<div class="card">
  <br>
  <h4 class="card-heading text-center">
    <%= @academic_calendar.name %>
  </h4>

  <table class="table">
    <thead>
      <tr>
        <th>Yıl</th>
        <th>Dönem</th>
        <th>Takvim Türü</th>
        <th>Senato Karar Tarihi</th>
        <th>Senato Karar No</th>
        <th colspan="3">İşlemler</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @academic_calendar.year %></td>
        <td><%= @academic_calendar.academic_term.fullname %></td>
        <td><%= @academic_calendar.type_name %></td>
        <td><%= @academic_calendar.senate_decision_date %></td>
        <td><%= @academic_calendar.senate_decision_no %></td>
        <td>
          <%= link_to 'Düzenle', edit_academic_calendar_path(@academic_calendar), class: "btn btn-secondary btn-sm" %>
          <%= link_to 'Sil', @academic_calendar, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    </tbody>
  </table>
  <br>
  <div class="card-footer">
    <%= link_to 'Geri', academic_calendars_path %>
  </div>
</div>
