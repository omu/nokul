<div class='row'>
  <div class='col-lg-12'>
    <div class='card'>
      <div class='card-header'>
        <%= fa_icon 'book', text: t('.card_header') %>
      </div>
      <div class='card-body'>
        <table class='table table-responsive-sm table-striped table-hover'>
          <thead class='thead-dark'>
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.effective_date') %></th>
              <th><%= t('.repealed_at') %></th>
              <th><%= t('.status') %></th>
              <th><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @regulations.each do |regulation| %>
              <tr>
                <td><%= regulation.name %></td>
                <td><%= l regulation.effective_date %></td>
                <td><%= regulation.repealed_at %></td>
                <td>
                  <% if regulation.repealed? %>
                    <h5><span class="badge bg-danger"><%= t('.repealed') %></span></h5>
                  <% else %>
                    <h5><span class="badge bg-success"><%= t('.active') %></span></h5>
                  <% end %>
                </td>
                <td><%= link_to_show(regulation) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <nav aria-label='pagination'>
      <ul class='pagination justify-content-center'>
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
  </div>
</div>
