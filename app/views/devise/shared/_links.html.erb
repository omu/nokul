<%- if controller_name != 'sessions' %>
  <%= link_to 'Giriş Yap', new_session_path(resource_name), class: 'btn btn-secondary', role: 'button' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to 'Kayıt Ol', new_registration_path(resource_name), class: 'btn btn-secondary', role: 'button' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to 'Şifreni mi Unuttun?', new_password_path(resource_name), class: 'btn btn-secondary', role: 'button' %>
<% end -%>
