<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-header">
        <%= fa_icon 'password' %>
        <strong>Şifre Değişikliği</strong>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="row">
            <div class='form-group col-sm-12'>
              <%= f.error_notification %>
            </div>
            <div class='form-group col-sm-12'>
              <%= f.input :email, autofocus: true, disabled: true %>
            </div>
            <div class='form-group col-sm-6'>
              <%= f.input :password, autocomplete: 'off', hint: 'değiştirmek istemiyorsanız boş bırakın', required: false %>
            </div>
            <div class='form-group col-sm-6'>
              <%= f.input :password_confirmation, required: false %>
            </div>
            <div class='form-group col-sm-12'>
              <%= f.input :current_password, hint: 'e-mail adresinizi değiştirebilmek için mevcut şifrenizi girmeniz gerekmektedir', required: true %>
            </div>
            <div class='form-group col-sm-12'>
              <%= f.button :submit, class: 'btn btn-outline-success btn-sm' %>
              <%= link_to_back(:back) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
