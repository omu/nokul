<div class="col-sm-12">
  <div class="card">
    <div class="card-header">
      <%= fa_icon 'password' %>
      <strong>Şifre Değişikliği</strong>
    </div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class='form-group col-sm-12'>
            <label>Email Adresiniz</label>
            <%= f.input :email, autofocus: true, disabled: true, label: false, input_html: { class: 'form-control' }, wrapper: false %>
          </div>
        </div>
        <div class="row">
          <div class='form-group col-sm-6'>
            <label>Yeni Şifreniz</label>
            <%= f.input :password, autocomplete: 'off', hint: 'değiştirmek istemiyorsanız boş bırakın', label: false, required: false, input_html: { class: 'form-control' } %>
          </div>
          <div class='form-group col-sm-6'>
            <label>Yeni Şifreniz (Tekrar)</label>
            <%= f.input :password_confirmation, required: false, label: false, input_html: { class: 'form-control' } %>
          </div>
        </div>
        <div class="row">
          <div class='form-group col-sm-12'>
            <label>Mevcut Şifreniz</label>
            <%= f.input :current_password, label: false, hint: 'e-mail adresinizi değiştirebilmek için mevcut şifrenizi girmeniz gerekmektedir', required: true, input_html: { class: 'form-control' } %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, 'Güncelle', class: 'btn btn-primary' %>
          <%= link_to 'Geri', :back, class: "btn btn-secondary", role: "button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
