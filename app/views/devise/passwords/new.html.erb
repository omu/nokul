<div class="col-md-6">
  <div class="card mx-4">
    <div class="card-body p-4">
      <h1><%= t('devise.common.reset_password') %></h1>
      <p class="text-muted"><%= t('.hint') %><p>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">@</span>
          </div>
          <%= f.input :email, required: true, autofocus: true, label: false, wrapper: false %>
        </div>

        <%= f.button :submit, t('.send_instructions'), class: 'btn btn-block btn-primary' %>
      <% end %>
    </div>
    <div class="card-footer p-4">
      <div class="row">
        <div class="col-6">
          <%= link_to t('devise.common.login'), new_session_path(resource_name), class: 'btn btn-secondary btn-block', role: 'button' %>
        </div>
        <div class="col-6">
          <%= link_to t('devise.common.register'), new_registration_path(resource_name), class: 'btn btn-secondary btn-block', role: 'button' %>
        </div>
      </div>
    </div>
  </div>
</div>
